set positional-arguments

watch +args='test':
  cargo watch --clear --exec '{{args}}'

fmt:
  cargo fmt --all

clippy:
  cargo clippy --all --all-targets -- --deny warnings

ci: clippy
  cargo fmt -- --check
  cargo test --all
  cargo test --all -- --ignored

outdated:
  cargo outdated --root-deps-only --workspace

unused:
  cargo +nightly udeps --workspace

doc:
  cargo doc --workspace --open

miner: 
  RUST_LOG=info cargo run -- miner --host solo.ckpool.org --port 3333 --user abc.123

server: 
  RUST_LOG=info cargo run -- --log-dir ../logs server --port 8080
